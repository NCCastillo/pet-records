<div id="new-appointment-container">
  <%= semantic_form_for @appointment do |f| %>
    <%= f.semantic_errors %>
    <%= f.inputs do %>
      <%= f.input :description %>
      <%= f.input :appointment_schedule, as: :datetime_select, wrapper_html: { class: "inline-date" }%>
    <% end %>
    <%= f.actions do %>
      <%= f.action :submit, label: "Add" %>
    <% end %>
  <% end %>
</div>

